name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Path to input artifact in W&B
        type: string

      output_artifact:
        description: Path to output artifact in W&B
        type: string

      output_type:
        description: Type of output artifact
        type: string

      output_description:
        description: Description of output artifact
        type: string

      min_price:
        description: Minimum accepted price
        type: float

      max_price:
        description: Maximum accepted price
        type: float


    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {min_price}  --max_price {max_price}
