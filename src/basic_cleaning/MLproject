name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Fully qualified name for the input artifact
        type: str

      output_artifact:
        description: Fully qualified name for the output artifact
        type: str

      output_type:
        description: Type of the artifact ot create
        type: str

      output_description:
        description: Description for the artifact
        type: str

      min_price:
        description: Minimum price for properties
        type: float

      max_price:
        description: Maximum price for properties
        type: float


    command: >-
        python run.py --input_artifact {input_artifact} \
                      --output_artifact {output_artifact} \
                      --output_type {output_type} \
                      --output_description {output_description} \
                      --min_price {min_price} \
                      --max_price {max_price} 
