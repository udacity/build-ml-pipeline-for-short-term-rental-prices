name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Name of the input artifact
        type: str

      output_artifact:
        description: Name of the output artifact
        type: str

      output_type:
        description: Type of the output artifact
        type: str

      output_description:
        description: Description of the output artifact
        type: str

      min_price:
        description: Minimum price to consider
        type: float

      max_price:
        description: Maximum price to consider
        type: float

    command: >-
        python run.py --input_artifact {input_artifact} \
                      --output_artifact {output_artifact} \
                      --output_type {output_type} \
                      --output_description {output_description} \
                      --min_price {min_price} \
                      --max_price {max_price}
